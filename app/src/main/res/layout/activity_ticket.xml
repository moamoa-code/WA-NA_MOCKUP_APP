<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5fa0d6">
        <TextView
                android:id="@+id/dishMenuFrameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:text="Details"/>
        <ImageView
                android:id="@+id/dishMenuFrameCloseBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:src="@drawable/left_arrow"/>
    </FrameLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dakgang"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="와인숙성 닭강정"
            android:textColor="#000000"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(dak gangjeong)"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweet and Sour Chicken"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:text="Ingredient"/>
        <!-- 각종 아이콘 dm_icons-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginVertical="8dp">
            <LinearLayout
                android:id="@+id/dm_icons"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <!-- 소고기 icon_beef-->
